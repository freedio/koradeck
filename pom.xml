            </dependency>
            <dependency>
                <groupId>com.coradec.coradeck</groupId>
                <artifactId>db</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.coradec.coradeck</groupId>
                <artifactId>db-basic</artifactId>
