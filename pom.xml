    <modelVersion>4.0.0</modelVersion>

    <groupId>com.coradec.coradeck</groupId>
    <artifactId>coradeck</artifactId>
    <packaging>pom</packaging>
    <version>0.4</version>

    <modules>
        <module>CoraModule</module>
        <module>CoraCore</module>
        <module>CoraDir</module>
        <module>CoraDirBasic</module>
        <module>CoraControl</module>
