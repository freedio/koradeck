        <kotlin.version>1.6.10</kotlin.version>
        <target.jdk.version>1.8</target.jdk.version>
        <jdk.release>11</jdk.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencyManagement>
