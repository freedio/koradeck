            </dependency>
            <dependency>
                <groupId>com.coradec.coradeck</groupId>
                <artifactId>bus</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.coradec.coradeck</groupId>
                <artifactId>bus-basic</artifactId>
